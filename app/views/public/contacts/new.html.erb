<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 correct-msg-main">
      <%= form_with model: @contact, local: true do |f| %>
      <div class='form-header'>
        <label class='mt-4 mb-4 lead bg-light'>
          お問い合わせフォーム
        </label>
      </div>
      <div class="contact-form">
        <div class="correct-text-field mt-4 mb-4">
          <div>お名前</div>
          <%= f.text_field:correct_name, placeholder: "お名前", class: "input-form" %>
        </div>
        <div class="correct-text-field">
          <div>お問い合わせ内容</div>
          <%= f.text_area:content, placeholder: "サイトに関するお問い合わせ内容を入力", class: "input-form" %>
        </div>
        <div class="send-btn-contents ml-5 mb-3 mt-3">
          <div class="register-btn ml-2">
            <%= f.button type: "submit", class:"register-red-btn", style:'border-style: none;' do %>
              送信 <i class="fas fa-paper-plane"></i>
            <% end %>
          </div>
        </div>
        <div class="register-btn ml-5">
          <%= link_to "もどる", root_path, class:"register-red-btn ml-2", style:"background-color: #aaa" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
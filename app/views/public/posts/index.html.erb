<div class="container">
  <label class="mt-4 mb-4 lead bg-light">投稿一覧</label>
  <div class="row">
    <table class="table border">
      <thead>
        <tr>
          <th>投稿日時</th>
          <th>投稿名</th>
          <th>投稿者</th>
        </tr>
      </thead>
      <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <%= link_to root_path do %>
            <%= l post.created_at %>
            <% end %>
          </td>
          <td><%= post.post_name %></td>
          <td><%= post.user.name %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
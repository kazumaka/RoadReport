<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <label class="mt-4 mb-4 lead bg-light">投稿画面</label>
      <%= form_with model: @post,local: true,multipart: true do |f| %>
      <div class="form-groru">
        <label>投稿名</label>
        <%= f.text_field :post_name %>
      </div>
      <div class="form-groru">
        <label>道路名</label>
        <%= f.text_field :road_name %>
      </div>
      <div class="form-groru">
        <label>ご意見・ご要望</label>
        <%= f.text_area :introduction %>
      </div>
      <div class="form-groru">
        <label>写真</label>
        <%= f.file_field :image %>
      </div>
      <%= f.fields_for :spot do |s| %>
      <div class="form-groru">
        <label>住所</label>
        <%= s.text_field :address,placeholder: "スポットを入力",id: "address" %>
      </div>
      <%= s.submit "検索する",onclick: "codeAddress()",class: "btn btn-success" %>
      <% end %>
      <div class="map" id="map" style="height: 320px; width: 640px;"></div>
      <%= f.submit "投稿する",class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
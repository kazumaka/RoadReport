<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <label class="mt-4 mb-4 lead lead-font-size bg-secondary text-light">新規登録画面</label>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field mb-4">
          <%= f.label :名前,class: "mr-5" %>
          <label class="ml-5"><%= f.text_field :name %></label>
        </div>

        <div class="field mb-4">
          <%= f.label :メールアドレス,class: "mr-5" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field mb-4">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field mb-4">
          <%= f.label :パスワード %>(確認用)
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録",class: "btn btn-success" %>
        </div>
      <% end %>

      <!--<%= render "public/shared/links" %>-->
    </div>
  </div>
</div>



<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <label class="mt-4 mb-4 lead lead-font-size bg-secondary text-light">登録情報編集画面</label>
      <%= form_with model: @user,url: user_update_path,method: :patch do |f| %>
      <div class="form-group mb-3">
        <label>氏名</label>
        <%= f.text_field:name %>
      </div>
      <div class="form-group mb-3">
        <label>メールアドレス</label>
        <%= f.text_field:email %>
      </div>
      <%= f.submit "編集内容を保存", class: "btn btn-success" %>
      <%= link_to confirm_path,class: "btn btn-danger ml-5" do %>
        退会する
      <% end %>
      <% end %>
    </div>
  </div>
</div>
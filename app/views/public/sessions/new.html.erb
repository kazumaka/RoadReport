<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h4 class="mt-3">ログイン</h4>
      <label class="mt-4 mb-4 lead lead-font-size bg-secondary">会員の方はこちらからログイン</label>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field ml-3 mb-2">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "ml-3" %>
        </div>

        <div class="field ml-3 mb-3">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "current-password", class: "ml-5 mr-5" %>
          <%= f.submit "ログイン", class: "btn btn-success ml-5" %>
        </div>

        <!--<% if devise_mapping.rememberable? %>-->
        <!--  <div class="field">-->
        <!--    <%= f.check_box :remember_me %>-->
        <!--    <%= f.label :remember_me %>-->
        <!--  </div>-->
        <!--<% end %>-->
      <% end %>

      <label class="mt-5 mb-4 lead lead-font-size bg-secondary">会員登録がお済みでない方</label>
      <div class="form-group">
        <%= link_to new_user_registration_path do %>
          こちら
        <% end %>
        から新規登録を行ってください。
      </div>

      <!--<%= render "public/shared/links" %>-->
    </div>
  </div>
</div>


<div class="container">
  <label class="mt-4 mb-4 lead lead-font-size bg-secondary text-light"><%= @user.name %>さんの投稿一覧</label>
  <div class="row">
    <table class="table border">
      <thead>
        <tr class="table-primary">
          <th>投稿日時</th>
          <th>投稿名</th>
          <th>事業化ステータス</th>
          <th>コメント数</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
        <tr>
          <td>
            <%= link_to admin_post_path(post.id), 'data-turbolinks': false do %>
            <%= l post.created_at %>
            <% end %>
          </td>
          <td><%= post.post_name %></td>
          <td>
            <% if post.is_active == true %>
            <label class="text-danger">事業化候補</label>
            <% else %>
            保留
            <% end %>
          </td>
          <td><%= "#{post.post_comments.count}件" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @posts %>
  </div>
</div>
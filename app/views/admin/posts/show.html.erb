<div class="container">
  <%= render 'public/posts/show', post: @post, map: @map %>
  <div class="row">
    <div class="col-md-2"></div>
    <%= form_with model: @post,url: admin_post_path do |f| %>
    <div class="col-md-6">
      <label>事業化ステータス</label>
      <div class="mb-3"><%= f.radio_button :is_active, "false",checked: true %>保留   <%= f.radio_button :is_active, "true" %>事業化候補</div>
      <%= f.submit "変更を保存",class: "btn btn-success" %>
      <% end %>
      <%= link_to admin_post_path(@post.id),class: "btn btn-danger",method: :delete, "data-confirm" => "本当に削除しますか？" do %>
        投稿を削除
      <% end %>
      <p>コメント件数：<%= @post.post_comments.count %></p>
      <% @post.post_comments.each do |post_comment| %>
        <p>
          <%= l post_comment.created_at, format: :short %><%= post_comment.user.name %><br>
          <%= post_comment.comment %>
          <%= link_to post_post_comment_path(post_comment.post, post_comment),method: :delete do %>
            コメントを削除
          <% end %>
        </p>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <%= render 'public/posts/show', post: @post, map: @map %>
  <div class="row">
    <div class="col-md-6"></div>
    <div class="mt-5 col-md-6"></div>
    <%= form_with model: @post,url: admin_post_path do |f| %>
    <div class="form-group col-md-6">
      <label>事業化ステータス</label>
      <div><%= f.radio_button :is_active, "false",checked: true %>保留   <%= f.radio_button :is_active, "true" %>事業化候補</div>
      <div><%= f.submit "変更を保存",class: "btn btn-success" %></div>
      <% end %>
      <div>
      <%= link_to admin_post_path(@post.id),class: "btn btn-danger",method: :delete, "data-confirm" => "本当に削除しますか？" do %>
        投稿を削除
      <% end %>
      </div>
    </div>
  </div>
</div>
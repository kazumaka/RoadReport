<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <label class="mt-4 mb-4 lead bg-light"><%= @user.name %>さんの会員情報編集画面</label>
      <%= form_with model: @user,url: admin_user_path,method: :patch do |f| %>
        <div class="form-group">
          <label>氏名</label>
          <%= f.text_field:name %>
        </div>
        <div class="form-group">
          <label>メールアドレス</label>
          <%= f.text_field:email %>
        </div>
        <div class="form-group">
          <label>会員ステータス</label>
          <%= f.radio_button:is_deleted,"false", checked: true %>有効  <%= f.radio_button:is_deleted,"true" %>退会
        </div>
        <%= f.submit "変更を保存する", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>